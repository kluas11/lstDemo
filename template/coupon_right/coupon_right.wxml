<!-- 我的优惠券 开始 -->
<template name="mycoupon">
  <view class='list_right' bindtap='receivetap' wx:if="{{tabtype == 'getUserCoupon'}}">
    <button class='cuopon_share' data-status='{{status}}' data-id='{{item.id}}' wx:if="{{item.canshare==1}}">赠送</button>
    <button class='cuopon_btn' data-status='{{status}}' data-id='{{item.id}}'>去使用</button>
  </view>
  <view class='list_right' wx:elif="{{tabtype == 'getuserCouponUsed'}}">
    <view class='right_img'>
      <image class='used_img' src='/images/used.png'></image>
    </view>
  </view>
  <view class='list_right' wx:elif="{{tabtype == 'getUserCouponExc'}}">
    <view class='right_img'>
      <image class='used_img' src='/images/timeout.png'></image>
    </view>
  </view>
</template>
<!-- 我的优惠券 结束 -->


<!-- 优惠中心  开始 -->
<template name="coupon">
  <!-- 线上普通券 -->
  <view class='list_right' wx:if="{{coupon_attr =='NORMAL'}}">
    <button bindtap='receivetap' class='cuopon_btn'>领取</button>
  </view>
  <!-- 线上购买券 -->
  <view class='list_right' wx:elif="{{coupon_attr =='BUY'}}">
    <view class='list_right_price' wx:if="{{item.buy_way=='MONEY'}}">
      <text style="font-size: 28rpx;">￥</text>
      <text>{{item.buy_price}}</text>
    </view>
    <view class='list_right_price' wx:elif="{{item.buy_way=='PAYPOINT'}}">
      <text>{{item.buy_paypoints}}积分</text>
    </view>
    <text decode="true" class='list_right_originprice'>&nbsp;&nbsp;&nbsp;原价：{{item.origin_buy_price}}&nbsp;&nbsp;&nbsp;</text>
    <button class='cuopon_btn'>{{item.buy_way=='PAYPOINT'?'兑换':'购买'}}</button>
  </view>
</template>
<!-- 优惠中心  结束 -->