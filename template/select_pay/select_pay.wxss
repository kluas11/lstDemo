.orderpaybox {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
}

.payByBalance {
  background: #38a4f0;
}

.payment {
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx;
}

.payment_price {
  font-size: 30rpx;
  text-align: center;
}

.payment button {
  color: #fff;
  margin-top: 20rpx;
}

.payByWXPay {
  background-color: #1aad19;
}

.addressmark {
  width: 100%;
  height: 100%;
  position: fixed;
  background: #000;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}
