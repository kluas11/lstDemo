<!--component/getmore/getmore.wxml-->
<wxs module='cuopon' src='./coupon.wxs' />
<view class='list_out'>
  <view class='{{cuopon.isoverdue(Cuoponitem.limit_total,Cuoponindex,select_index)}}'>
    <view class='list_left' bindtap='detailTap' data-id='{{Cuoponitem.id}}'>
      <!-- 满减多少钱  SUBTRAC-->
      <view class='cuopon_price' wx:if='{{Cuoponitem.coupon_type == "SUBTRAC"}}'>
        <text class='num'>{{cuopon.parseFloat(Cuoponitem.subtrac_money)}}</text>
        <text>元</text>
      </view>
      <!-- 满减折扣  PERCENT-->
      <view class='cuopon_price' wx:elif='{{Cuoponitem.coupon_type == "PERCENT"}}'>
        <text class='num'>{{cuopon.toFloat(Cuoponitem.subtrac_percent)}}</text>
        <text>折</text>
      </view>
      <!-- 一口价 BUYOUT -->
      <view class='cuopon_price' wx:elif='{{Cuoponitem.coupon_type == "BUYOUT"}}'>
        <text class='num'>{{cuopon.parseFloat(Cuoponitem.buyout_price)}}</text>
        <text>元</text>
      </view>
      <view class='center'>
        <!-- 中间的标题 详情 时间 -->
        <text wx:if='{{Cuoponitem.coupon_type == "BUYOUT"}}' class='title'>{{Cuoponitem.name}}</text>
        <!-- 满减+满打折 和 一口价的标题不同 -->
        <text wx:else class='title'>满{{cuopon.parseFloat(Cuoponitem.subtrac_price)}}元可用</text>
        <text class='coupon_details clamp2'>{{Cuoponitem.details}}</text>
        <view>
          <text>{{cuopon.timestampToTime(Cuoponitem.start_time,true)}}-</text>
          <text>{{cuopon.timestampToTime(Cuoponitem.end_time,true)}}</text>
        </view>
      </view>
    </view>
    <!-- 插槽 -->
    <slot></slot>
  </view>
</view>