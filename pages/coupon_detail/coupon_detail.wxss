/* pages/coupon_detail/coupon_detail.wxss */

page {
  background: #f2f2f2;
  height: 100%;
  box-sizing: border-box; 
}
.layout{
  padding-bottom:100rpx;
}
.head {
  background: #fff;
  padding: 20rpx 15rpx 0rpx 20rpx;
  margin-bottom: 15rpx;
}

.img_box {
  display: flex;
  justify-content: center;
}

.head_img {
  width: 400rpx;
  height: 400rpx;
}

.head_name {
  font-size: 24rpx;
  font-weight: 700;
  color: #666;
  margin-top: 15rpx;
}

.head_detail {
  display: flex;
  align-items: flex-end;
  font-size: 16rpx;
  margin-top: 30rpx;
  color: #999;
}

.rmb {
  font-size: 28rpx;
  color: #fa6958;
  font-weight: 400;  
}

.buy_price {
  font-size: 36rpx;
  color: #fa6958;
  font-weight: 400;
}
.origin_buy_price{
  text-decoration: line-through;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
}
.canshare{
  display: inline-block;
  width: 91rpx;
  height: 24rpx;
  box-sizing: border-box;
  border-radius: 6rpx;
  border: 1rpx solid #CC3300;
  color: #CC3300;
  text-align: center;
  font-size: 16rpx;
  margin-left: 20rpx;
  margin-bottom: 10rpx;
}
.foot_btn{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}
.foot_btn button{
  background: #fa6958;
  border-radius: 0;
  color: #fff;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}