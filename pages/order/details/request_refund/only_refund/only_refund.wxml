<!--pages/member/refund/request_refund/only_refund/only_refund.wxml-->
<view class='container'>
  <view class='commodity'>
    <!-- <image class='img' src='/images/unknown-picture.png' lazy-load='true'></image> -->
    <image class='img' src='{{obj.original_img}}' lazy-load='true'></image>
    <view class='content'>
      <text class='name'>{{obj.goods_name}}</text>
      <view class="num-wrapper">
        <image class='subtract' src='/images/subtract_fill.png' lazy-load='true' bindtap='subtract'></image>
        <input class="input" type='num' bindinput='inputClick' value='{{refundNum}}'></input>
        <image class='add' src='/images/add_fill.png' lazy-load='true' bindtap='add'></image>
      </view>
    </view>
  </view>
  <view class='select-wrapper'>
    <view class='status' bindtap='statusClick'>
      <text class='text'>货物状态</text>
      <image class='right-arrow' src='/images/right-arrow.png' lazy-load='true'></image>
    </view>
    <view class='reason' bindtap='reasonClick'>
      <text class='text'>退款原因</text>
      <image class='right-arrow' src='/images/right-arrow.png' lazy-load='true'></image>
    </view>
  </view>
  <view class='refund-wrapper'>
    <view class='money'>
      <text class='text'>退款金额</text>
      <text class='num'>{{money}}</text>
    </view>
    <view class='tips'>*退款金额不含运费</view>
    <view class='description'>
      <text class='text'>退款说明</text>
      <input class="input" type='text' placeholder='选填' bindinput='inputDescription' value='{{description}}'></input>
    </view>
  </view>
  <view class='certificate-wrapper'>
    <view class='title'>上传凭证</view>
    <view class='certificate'>
      <block wx:for='{{certificate}}' wx:key='index'>
        <image class='item-img' src='{{item}}' mode='aspectFill' lazy-load='true'></image>
      </block>
      <view class='add' wx:if='{{certificate.length<5}}' bindtap='chooseImage'>
        <image class='img' src='/images/camera.png' lazy-load='true'></image>
        <text class='text'>添加图片</text>
        <text class='text'>(最多5张)</text>
      </view>
    </view>
  </view>
  <view class='submit' bindtap='submit'>提交</view>
  <view class='select-top-wrapper' style='{{statusStyle}}'>
    <view class='flex'>
      <view class='blank' bindtap='selectTopWrapper'></view>
      <view class='select'>
        <view class='status'>
          <image class='left-arrow' src='/images/left-arrow.png' lazy-load='true' bindtap='selectTopWrapper'></image>
          <text class='text'>货物状态</text>
          <view class='right'></view>
        </view>
        <view class='select-item' bindtap='goodStatus' data-status='0'>
          <text class='text'>已收货</text>
          <image class='hook' src='{{goodStatusImg[0]}}' lazy-load='true'></image>
        </view>
        <view class='select-item' bindtap='goodStatus' data-status='1'>
          <text class='text'>未收货</text>
          <image class='hook' src='{{goodStatusImg[1]}}' lazy-load='true'></image>
        </view>
      </view>
    </view>
  </view>
  <view class='reason-top-wrapper' style='{{reasonStyle}}'>
    <view class='flex'>
      <view class='blank' bindtap='reasonTopWrapper'></view>
      <view class='select'>
        <view class='status'>
          <image class='left-arrow' src='/images/left-arrow.png' lazy-load='true' bindtap='reasonTopWrapper'></image>
          <text class='text'>退款原因</text>
          <view class='right'></view>
        </view>
        <view class='select-item' bindtap='reasonItem' data-status='0'>
          <text class='text'>多拍/拍错/不想要</text>
          <image class='hook' src='{{reasonImg[0]}}' lazy-load='true'></image>
        </view>
        <view class='select-item' bindtap='reasonItem' data-status='1'>
          <text class='text'>卖家发错货</text>
          <image class='hook' src='{{reasonImg[1]}}' lazy-load='true'></image>
        </view>
        <view class='select-item' bindtap='reasonItem' data-status='2'>
          <text class='text'>生产日期/保质期描叙不符</text>
          <image class='hook' src='{{reasonImg[2]}}' lazy-load='true'></image>
        </view>
        <view class='select-item' bindtap='reasonItem' data-status='3'>
          <text class='text'>其他</text>
          <image class='hook' src='{{reasonImg[3]}}' lazy-load='true'></image>
        </view>
      </view>
    </view>
  </view>
  <view class='quit-tips' style='display:none'>
    <view class='flex'>
      <view class='content'>
        <view class='text'>
          <text class='text-content'>页面内容已有更改 是否退出申请?</text>
        </view>
        <view class='select'>
          <view class='determine'>确认</view>
          <view class='cancel'>取消</view>
        </view>
      </view>
    </view>
  </view>
</view>