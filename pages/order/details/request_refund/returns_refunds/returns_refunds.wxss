@keyframes bg {
  0% {
    background-color: rgba(0, 0, 0, 0);
  }
  100% {
    background-color: rgba(0, 0, 0, 0.5);
  }
}
@keyframes up {
  0% {
    transform: translate3d(0, 665rpx, 0);
  }
  100% {
    transform: translate3d(0, 0, 0);
  }
}
page {
  height: 100%;
  background-color: #f2f2f2;
}
.container {
  width: 100%;
  font-size: 25rpx;
}
.container .commodity {
  width: 100%;
  height: 204rpx;
  background-color: rgba(0, 204, 255, 0.05);
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 14rpx #f2f2f2 solid;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .commodity .img {
  width: 139rpx;
  height: 139rpx;
}
.container .commodity .content {
  height: 139rpx;
  flex: 1;
  margin-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.container .commodity .content .num-wrapper {
  align-self: flex-end;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .commodity .content .num-wrapper .subtract {
  width: 31rpx;
  height: 31rpx;
}
.container .commodity .content .num-wrapper .input {
  width: 50rpx;
  margin: 0 10rpx 0 10rpx;
  text-align: center;
}
.container .commodity .content .num-wrapper .add {
  width: 31rpx;
  height: 31rpx;
}
.container .select-wrapper {
  background-color: #ffffff;
  box-sizing: border-box;
  border-bottom: 14rpx #f2f2f2 solid;
}
.container .select-wrapper .reason {
  width: 100%;
  height: 83rpx;
  position: relative;
  padding: 0 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.container .select-wrapper .reason .right-arrow {
  width: 18rpx;
  height: 31rpx;
}
.container .refund-wrapper {
  background-color: #ffffff;
  box-sizing: border-box;
  border-bottom: 14rpx #f2f2f2 solid;
}
.container .refund-wrapper .money {
  width: 100%;
  height: 83rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  border-bottom: 14rpx #f2f2f2 solid;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .refund-wrapper .money .num {
  color: #FF3333;
  margin-left: 30rpx;
}
.container .refund-wrapper .description {
  width: 100%;
  height: 83rpx;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.container .refund-wrapper .description .input {
  margin-left: 30rpx;
}
.container .certificate-wrapper {
  width: 100%;
  box-sizing: border-box;
  padding: 30rpx;
  margin-bottom: 83rpx;
  background-color: #ffffff;
  overflow: hidden;
}
.container .certificate-wrapper .certificate {
  margin-top: 30rpx;
  width: 100%;
  height: 100px;
}
.container .certificate-wrapper .certificate .item-img {
  width: 167rpx;
  height: 167rpx;
  margin: 0 30rpx 30rpx 0;
  float: left;
}
.container .certificate-wrapper .certificate .add {
  width: 167rpx;
  height: 167rpx;
  box-sizing: border-box;
  border: 1rpx #999999 solid;
  float: left;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.container .certificate-wrapper .certificate .add .img {
  width: 43rpx;
  height: 38rpx;
}
.container .certificate-wrapper .certificate .add .text {
  color: #999999;
}
.container .submit {
  width: 100%;
  height: 83rpx;
  line-height: 83rpx;
  text-align: center;
  background-color: #cc3333;
  color: #ffffff;
  position: fixed;
  left: 0;
  bottom: 0;
  z-index: 2;
}
.container .reason-top-wrapper {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 3;
  animation: bg 0.5s ease forwards;
}
.container .reason-top-wrapper .flex {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
}
.container .reason-top-wrapper .flex .blank {
  width: 100%;
  flex: 1;
}
.container .reason-top-wrapper .flex .select {
  width: 100%;
  height: 665rpx;
  background-color: #ffffff;
  position: absolute;
  left: 0;
  bottom: 0;
  animation: up 0.5s ease forwards;
}
.container .reason-top-wrapper .flex .select .status {
  width: 100%;
  height: 83rpx;
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.container .reason-top-wrapper .flex .select .status::after {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #f2f2f2;
  content: "";
  transform: scaleY(0.5);
}
.container .reason-top-wrapper .flex .select .status .left-arrow {
  width: 18rpx;
  height: 31rpx;
}
.container .reason-top-wrapper .flex .select .select-item {
  width: 100%;
  height: 83rpx;
  position: relative;
  box-sizing: border-box;
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.container .reason-top-wrapper .flex .select .select-item::after {
  display: block;
  position: absolute;
  left: 0;
  bottom: 0;
  width: 100%;
  border-top: 1rpx solid #f2f2f2;
  content: "";
  transform: scaleY(0.5);
}
.container .reason-top-wrapper .flex .select .select-item .text {
  color: #999999;
}
.container .reason-top-wrapper .flex .select .select-item .hook {
  width: 31rpx;
  height: 24rpx;
}
