/* 选择的优惠券 */

.disabled {
  display: flex;
  border: 2rpx solid #4ab760;
  border-radius: 10rpx;
  border-left: 6rpx solid #00ff32;
  align-items: center;
  justify-content: space-between;
  height: 100%;
}

.disabled::after, .disabled::before {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border: 2rpx solid #4ab760;
  border-radius: 50%;
  position: absolute;
  left: 466rpx;
  transform: translateX(-25%);
  background: #fff;
  z-index: 9;
}

.disabled::after {
  bottom: -6rpx;
}

.disabled::before {
  top: -6rpx;
}

.disabled .list_left {
  display: flex;
  align-items: center;
  height: 100%;
  width: 466rpx;
  padding: 20rpx 0;
  border-right: 1px dashed #4ab760;
  justify-content: space-around;
}

.disabled .cuopon_price {
  color: #4ab760;
  font-size: 24rpx;
  margin: 0rpx 20rpx;
}
