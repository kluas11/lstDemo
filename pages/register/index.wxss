page {
  background: #fff;
}

/* page/login/login.wxss */

.wx-view_login {
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 100%;
  background: transparent;
  background-size: cover;
  align-items: stretch;
}

.view_logup_form {
  font-size: 28rpx;
  margin-top: 40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  background-color: rgba(255, 255, 255, 0.35);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
}
.wx-view_log_item {
  height: 80rpx;
  display: flex;
  align-items: center;
  border-style: solid;
  border-top-style: none;
  border-right-style: none;
  border-left-style: none;
  border-bottom-width: 2rpx;
  border-bottom-color: rgb(235, 235, 235);
  background-color: rgba(255, 255, 255, 0.3);
}
.wx-view_log_item .log_label {
  width: 130rpx;
  text-align: justify;
  text-align-last: justify;
  margin-right: 15rpx;
  color: #999;
  font-weight: 500;
}
.view_forgetOrLogup {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  width: 86%;
}

/*字体*/

.btn_getnum {
  font-size: 30rpx;
  font-weight: 550;
  font-family: 宋体;
  color: #3aa0b7;
  background-color: rgba(255, 255, 255, 0.7);
  border: solid;
  border-color: #3aa0b7;
  border-width: 2rpx;
  border-radius: 8rpx;
  width: 172rpx;
  height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-right: 50rpx;
}

.wx_input {
  font-size: 34rpx;
  font-weight: 550;
  font-family: 宋体;
  background: transparent;
  flex: 1;
  color: #3aa0b7;
}

.wx-text_logup {
  width: 170rpx;
  flex: 0 0 auto;
  font-size: 34rpx;
  font-weight: 550;
  font-family: 宋体;
  background: transparent;
  color: rgb(35, 35, 35);
}

.wx-text_logup_to {
  font-size: 26rpx;
  text-align: left;
  color: rgb(241, 1, 25);
  text-decoration: underline;
  align-self: flex-end;
  margin-top: 30rpx;
  margin-bottom: 2rpx;
}

.text_title {
  font-family: 宋体;
  font-size: 30rpx;
  font-weight: 600;
  color: rgba(255, 255, 255, 0.8);
}

.my_toast_title {
  font-size: 32rpx;
  color: rgb(255, 255, 255);
  font-weight: bold;
  font-family: 宋体;
  text-align: center;
}

.wx-button_register {
  font-size: 34rpx;
  width: 86%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center;
  flex: 0 1 auto;
  align-self: center;
  margin-top: 24rpx;
  background: #fff;
  color: #3aa0b7;
  border-color: #3aa0b7;
  border-width: 2rpx;
  border-style: solid;
}

.line {
  width: 100%;
  height: 2rpx;
  background: rgba(235, 235, 235, 0.8);
}
