page {
  background: #eee;
}

.shopNameTip{
  font-size: 32rpx;
  color: #666;
  text-align: center;
  background: wheat;
}

.video {
  position: fixed;
  z-index: 99;
  top: 100rpx;
  left: 30rpx;
}

.video image {
  width: 100rpx;
  height: 100rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.view_search {
  width: 100%;
  height: 125rpx;
  background: #fff;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
}

.view_search text {
  font-size: 30rpx;
  color: #6c6c6c;
  padding-right: 10rpx;
  width: 100rpx;
  line-height: 30rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  flex-shrink: 0;
}

.view_searchbg {
  width: 96%;
  height: 70rpx;
  border-style: solid;
  border-width: 2rpx;
  border-radius: 15rpx;
  border-color: #cdcdcd;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.input_search {
  flex-grow: 2;
  font: 29rpx;
  color: #cdcdcd;
  font-size: 80%;
}

.input_search {
  font: 14px;
  color: #999;
  margin-left: 25rpx;
}

.view1 {
  height: 100%;
  width: 85rpx;
  flex: row;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.view1 image {
  height: 45rpx;
  width: 45rpx;
}

.line {
  height: 100%;
  width: 2rpx;
  background: #cdcdcd;
}

/*功能区*/

.func-area {
  display: flex;
  flex-direction: row;
  margin: 0 0;
  padding-top: 10rpx;
  background: white;
}

.func-area view {
  width: 25%;
  text-align: center;
}

.func-area text {
  display: block;
  color: #6c6c6c;
  font-size: 30rpx;
  line-height: 50rpx;
}

.func-area image {
  width: 125rpx;
  height: 125rpx;
}

.container-class {
  display: flex;
  flex-direction: column;
}

/*主商品区*/

.container-goods {
  background: white;
  margin-top: 20rpx;
}

.category_title {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
}

.container-goods .caption {
  font-size: 32rpx;
  width: 100%;
  line-height: 60rpx;
  text-indent: 20rpx;
  padding: 10rpx;
  text-align: center;
  color: #3e8f4f;
}

.main-goods {
  /* display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between; */
  white-space: nowrap;
  width: 96%;
  margin: 0 auto;
}

.main-goods>view {
  margin: 20rpx 0;
}

.main-goods .single-goods {
  /* width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; */
  margin: 0 20rpx 20rpx 0;
  display: inline-flex;
  flex-direction: column;
  width: 250rpx;
  text-align: center;
  background-color: #fafafa;
}

.main-goods image {
  width: 100%;
  height: 280rpx;
  display: block;
  margin-top: 20rpx;
}

.main-goods .title {
  margin: 15rpx 0;
  display: block;
  color: #999;
  font-size: 28rpx;
  line-height: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  flex-shrink: 0;
  width: 100%;
}

.main-goods .summary {
  width: 100%;
  display: flex;
  flex-direction: row;
  F: space-between;
  align-items: center;
}

.main-goods .summary text {
  font-size: 28rpx;
}

.main-goods .summary .price {
  color: red;
}

.main-goods .summary .sale {
  color: gray;
  font-size: 22rpx;
}
.main-goods .summary .source {
  display: block;
  width: 100%;
  color: #3d8f4f;
  text-align: center;
}


.view-ad {
  margin-top: 20rpx;
  width: 100%;
  height: 600rpx;
  display: flex;
  flex-direction: column;
}

.ad-header {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.ad-footer {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.ad-footer image {
  width: 373rpx;
  height: 200rpx;
}

.ad1 {
  width: 373rpx;
  height: 396rpx;
}

.header-right {
  width: 373rpx;
  height: 396rpx;
  display: flex;
  flex-direction: column-reverse;
  justify-content: space-between;
}

.header-right image {
  width: 373rpx;
  height: 196rpx;
}

.footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
}

.footer image {
  position: fixed;
  bottom: 40rpx;
  right: 40rpx;
  width: 120rpx;
  height: 100rpx;
}
