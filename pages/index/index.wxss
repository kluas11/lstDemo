}
.coupon_box{
  padding:20rpx 20rpx 20rpx 40rpx;
}
.get_coupon{
  background: #ff4747;
  color: #ffffff;
  font-size: 28rpx;
  padding: 0rpx 10rpx;
  position: relative;
}
.get_coupon::after,.get_coupon::before{
  content: "";
  position: absolute;
  width: 14rpx;
  height: 14rpx;
  background: #ffffff;
  border-radius: 50%;
  top: 50%;
  transform: translateY(-50%);
}
.get_coupon::after{
  left: -7rpx;
}
.get_coupon::before{
  right: -7rpx;
}
