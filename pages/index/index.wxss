.container-class {
  display: flex;
  flex-direction: column;
}

/*主商品区*/

.container-goods {
  background: white;
  margin-top: 20rpx;
}

.category_title {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: flex-end;
}

.container-goods .caption {
  font-size: 32rpx;
  width: 100%;
  line-height: 60rpx;
  text-indent: 20rpx;
  padding: 10rpx;
  text-align: center;
}

.main-goods {
  /* display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between; */
  white-space: nowrap;
  width: 96%;
  margin: 0 auto;
}

.main-goods>view {
  margin: 20rpx 0;
}

.main-goods .single-goods {
  /* width: 48%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center; */
  margin: 0 20rpx 20rpx 0;
  display: inline-flex;
  flex-direction: column;
  width: 250rpx;
  text-align: center;
  background-color: #fafafa;
}

.main-goods image {
  width: 100%;
  height: 280rpx;
  display: block;
  margin-top: 20rpx;
}

.main-goods .title {
  /* margin: 15rpx 0; */
  color: #999;
  font-size: 28rpx;
  line-height: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
   flex-shrink: 0; 
   width: 100%; 
   white-space:nowrap; 
   text-align: center
}

.main-goods .summary {
  width: 100%;
  display: flex;
  flex-direction: row;
  F: space-between;
  align-items: center;
}

.main-goods .summary text {
  font-size: 28rpx;
}

.main-goods .summary .price {
  color: red;
}

.main-goods .summary .sale {
  color: gray;
  font-size: 22rpx;
}
.main-goods .summary .source {
  display: block;
  width: 100%;
  text-align: center;
}


.view-ad {
  margin-top: 20rpx;
  width: 100%;
  height: 600rpx;
  display: flex;
  flex-direction: column;
}

.ad-header {
  width: 100%;
  height: 400rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.ad-footer {
  width: 100%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.ad-footer image {
  width: 373rpx;
  height: 200rpx;
}

.ad1 {
  width: 373rpx;
  height: 396rpx;
}

.header-right {
  width: 373rpx;
  height: 396rpx;
  display: flex;
  flex-direction: column-reverse;
  justify-content: space-between;
}

.header-right image {
  width: 373rpx;
  height: 196rpx;
}

.footer {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
