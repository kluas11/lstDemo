/* pages/goods/activity/activity.wxss */
@import '../../../template/active_store/active_store.wxss';
page{
  background: #eeeeee;
}

.header{
  box-sizing: border-box;
  display: flex;
  background: #ffffff;
  position: fixed;
  border-bottom: 2px solid #eeeeee;
  left: 0;
  top: 0;
  width: 100%;
}
.header .hea_text{
  padding: 20rpx 0;
  flex: 1;
  text-align: center;
  font-size: 30rpx;
  color: #ffffff;
  background: #868686;
}

.header .active{
  background: #ff9933;
  position: relative;
  overflow: hidden;
}
.header .active::after{
  content: '';
  position: absolute;
  border: 10rpx solid #ff9933;
  border-bottom: 10rpx solid #ffffff;
  bottom: 0rpx;
  left: 50%;
}
.info_box{
  margin-top: 100rpx;
}
.admin{
  background: #ffffff;
}