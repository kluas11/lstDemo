/* pages/coupon/b_detail/b_detail.wxss */
button[disabled]{
  border: 1rpx solid #cccccc;
}
.orderpaybox {
  position: absolute;
  top: 40%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 600rpx;
  background: #fff;
}
.payByBalance {
  background: #38a4f0;
}
.payment {
  display: flex;
  flex-direction: column;
  padding: 20rpx 20rpx;
}
.payment_price {
  font-size: 30rpx;
  text-align: center;
}
.payment button {
  color: #fff;
  margin-top: 20rpx;
}
.payByWXPay {
  background-color: #1aad19;
}
.addressmark {
  width: 100%;
  height: 100%;
  position: fixed;
  background: #000;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}
.addressmark {
  top: 0;
  left: 0;
}
.layout {
  background: #fff;
  padding: 35rpx 16rpx;
}
.content {
  background: #f2f2f2;
  padding: 0rpx 26rpx;
}
.head {
  height: 280rpx;
  border-bottom: 1rpx solid #dcdcdc;
  text-align: center;
  font-size: 18rpx;
  color: #999;
}
.cuopon_price {
  padding-top: 60rpx;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}
.num {
  font-size: 72rpx;
  margin-right: 10rpx;
}
.coupon_name {
  margin-bottom: 20rpx;
}
.share_text {
  padding: 0 10rpx;
  height: 26rpx;
  border: 1rpx solid #c30;
  border-radius: 6rpx;
  line-height: 26rpx;
  text-align: center;
  color: #c30;
  font-size: 16rpx;
}
.canshare {
  display: flex;
  height: 55rpx;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #dcdcdc;
}
.sel_text {
  height: 30rpx;
  line-height: 30rpx;
  border-left: 6rpx solid #d94612;
  padding-left: 16rpx;
  font-size: 18rpx;
  color: #999;
}
.used {
  height: 30rpx;
  line-height: 30rpx;
  border-left: 6rpx solid #d94612;
  padding-left: 16rpx;
  font-size: 18rpx;
  color: #f30;
}
.share_btn {
  width: 60rpx;
  height: 26rpx;
  border: 1rpx solid #c30;
  border-radius: 6rpx;
  line-height: 26rpx;
  text-align: center;
  color: #c30;
  font-size: 16rpx;
  margin: 0;
  padding: 0;
}
.details {
  display: flex;
  padding-top: 15rpx;
  flex-direction: column;
}
.details_text {
  font-size: 18rpx;
  color: #999;
  padding: 30rpx 0;
}
.foot_btn {
  position: fixed;
  height: 80rpx;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
}
.foot_price {
  flex: 1;
  height: 100%;
  border-top: 1rpx solid #ccc;
  line-height: 80rpx;
  text-align: center;
}
.buy_price {
  font-size: 36rpx;
  color: #fa6958;
}
.originprice {
  font-size: 16rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}
.buybtn {
  flex: 1;
  background: #fa6958;
  color: #ffffff;
  font-size: 28rpx;
  border-radius: 0;
}
button[disabled] {
  color: #ffffff;
}
