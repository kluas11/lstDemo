<view class="container">
  <!-- 侧边栏 -->
  <scroll-view class="sidebar" scroll-y="false" scroll-x="true" style="height:{{wh}}">
    <view wx:for="{{topCategories}}" wx:key="id" bindtap="tapTopCategory" data-id="{{item.class_id}}" data-banner="{{item.name}}" data-index="{{index}}" class="{{nav_avtive==index?'sidebarlist  activetabs':'sidebarlist'}}">
      <view class="{{nav_avtive==index?'active':'actives'}}"></view>
      <view class="{{nav_avtive==index?'activetext':'activestext'}}">{{item.name}}</view>
    </view>
  </scroll-view>
