    <text wx:for="{{topCategories}}" wx:key="id" bindtap="tapTopCategory" data-id="{{item.id}}" data-banner="{{item.mobile_name}}" data-index="{{index}}" class="{{nav_avtive==index?'highlight':''}}">{{item.mobile_name}}</text>
  </view> -->
  <!-- right -->
  <scroll-view class="main" scroll-y="false" scroll-x="true" lazy-load="false" style="height:{{wh}}">
    <view class='markshade' wx:if="{{loadings}}">
      <view class="spinner">
        <div class="bounce1"></div>
        <div class="bounce2"></div>
        <div class="bounce3"></div>
      </view>
    </view>
    <view class="gridview">
      <block wx:for="{{subCategories}}" wx:key="id">
        <view class='gridview_list'>
          <image src="{{item.image+list_oss}}" mode="scaleToFit" bindtap="avatarTap" data-object-id="{{item.class_id}}" />
          <text mode="scaleToFit" bindtap="avatarTap" data-object-id="{{item.class_id}}">{{item.name}}</text>
        </view>
      </block>
    </view>
  </scroll-view>
