/*页面背景*/
page {
	background-color: #ffffff;
}

/*容器总体布局为左右两列*/
.container {
	display: flex;
	flex-direction: row;
}

/*侧边栏顶级分类给予固定宽度*/
.sidebar {
	width: 300rpx;
	background: #e8e8e8;
}
.sidebar .sidebarlist{
  height: 100rpx;
  background:#e8e8e8;
  display: flex;
  flex-direction: row;
  line-height: 100rpx;
  text-align: center;
  align-items: center;
}
 .sidebar .activetabs {
  background:#fff;
} 
.sidebar .sidebarlist .actives{
flex:1;
background: transparent;
height:62rpx;
}
.sidebar .sidebarlist .activestext{
flex:20;
font-family: PingFangSC-Regular, sans-serif;
font-size: 14px;
color:#838383
}
.sidebar .sidebarlist .active {
flex:1;
background: #d84712;
height:62rpx;
}
.sidebar .sidebarlist .activetext {
flex:20;
font-family: PingFangSC-Regular, sans-serif;
