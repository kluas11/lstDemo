.main {
	display: flex;
  padding-left: 1%;
	flex-direction: column;
  width: 100%;
}

/*category banner*/
.banner {
	width: 100%;
	height: 180rpx;
	margin: 20rpx 0;
}

/*网格布局子类九宫格分布*/
.gridview {
	background-color: #ffffff;
  display: flex;
  flex-wrap: wrap;
  width: 100%;
  height:auto;
  padding:10px 0 10px 0;
}
.gridview .gridview_list{
  width: 33%;
  /* margin-top: 20rpx; */
  display: flex;
  flex-direction: column;
  align-items: center;
  overflow: hidden;
}
/*图片*/
.gridview view image {
	width: 130rpx;
	height: 130rpx;
}
/*文字*/
.gridview view text {
	color: #6c6c6c;
	font-size: 12px;
	text-align: center;
	display: block;
  margin-top: 10rpx;
}