<view class="layout">
  <view class='main'>
    <text>充值金额</text>
    <view class='input'>
      <text>￥</text>
      <input type='digit' bindblur='count' value="{{formatedNum}}"></input>
    </view>
    <view class='dLine'></view>
    <button class='btnNext' type='number' bindtap="wxRecharge">微信充值</button>
  </view>
  <view class='re_box'>
    <view class='re_title'>选择充值金额</view>
    <view class='recharge_lists' bindtap='rechargeTap'>
      <block wx:for="{{rules}}" wx:key="{{index}}">
        <view class='recharge_list' data-amount='{{item.lower_limit_money}}'>
          <text class='re_price' data-amount='{{item.lower_limit_money}}'>{{item.lower_limit_money}}元</text>
          <text class='balance' wx:if="{{item.giving_money&&item.giving_money!=0}}" data-amount='{{item.lower_limit_money}}'>立赠{{item.giving_money}}元</text>
          <text class='integral' wx:if="{{item.giving_paypoints&&item.giving_paypoints!=0}}" data-amount='{{item.lower_limit_money}}'>另送{{item.giving_paypoints}}积分</text>
        </view>
      </block>
    </view>
  </view>
</view>