page {
  background-color: #ffffff;
  display: flex;
  /* align-items: center; */
  justify-content: center;
}

.main {
  font-size: 18rpx;
  margin: 20rpx 15rpx 0;
  padding: 32rpx 24rpx;
  background: white;
  border: 1px solid rgba(204, 204, 204, 1);
}

.input {
  display: flex;
  margin: 68rpx 0 18rpx; 
}

.input > text {
  font-size: 36rpx;
  margin-right: 32rpx;
}

.input > input {
  font-size: 36rpx;
}

.dLine {
  height: 3rpx;
  width: 100%;
  background: #ddd;
}

.btnNext {
  height: 63rpx;
  line-height: 63rpx;
  width: 654rpx;
  font-size: 24rpx;
  background-color: #009247;
  color: white;
  text-align: center;
  margin-top: 60rpx;
}

/* 充值金额 开始*/
.re_box{
  padding: 0 15rpx;
  margin-top: 90rpx;
}
.re_title{
  font-size: 22rpx;
  font-weight: 500;
  color: #333333;
}
.recharge_lists {
  display: flex;
  flex-wrap: wrap;
  padding-bottom: 20rpx;
}

.recharge_list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  width: 220rpx;
  height: 200rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  border-radius: 6rpx;
  position: relative;
  overflow: hidden;
  margin-right: 20rpx;
}
.recharge_list:nth-of-type(3n){
  margin-right: 0rpx;
}

.re_price {
  font-size: 28rpx;
  font-weight: 700;
}

.balance {
  font-size: 18rpx;
  font-weight: 400;
  color: #999999;
}

.integral {
  font-size: 18rpx;
  color: #ffffff;
  background: #f96268;
  padding: 6rpx;
  width: 200rpx;
  text-align: center;
  transform-origin: 50% 50%;
  transform:rotateZ(-45deg);
  position: absolute;
  top: 28rpx;
  left: -62rpx;
}

/* 充值金额 结束*/

/* 选择充值金额 开始 */

.selected {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.select_list {
  margin-left: 20rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.select_price {
  color: #d94612;
  margin-left: 10rpx;
}

/* 选择充值金额 结束 */

/* 充值规矩 开始 */

.rules {
  background: #fdcb08;
  width: 600rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.rules_title {
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  padding: 20rpx 0;
}

.rules_info {
  padding: 20rpx 40rpx;
}

.rules_list {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.rules_name {
  color: #000;
  font-weight: 400;
}

.condition {
  padding-left: 20rpx;
}

/* 充值规矩 结束  */
