page {
  background-color: #eee;
  display: flex;
  justify-content: center;
}

.main {
  font-size: 18rpx;
  margin: 66rpx 22rpx 0;
  padding: 0rpx 34rpx 0 32rpx;
  background: white;
  border: 1px solid #e7e7e7;
  border-bottom: none;
  height: 320rpx;
  position: relative;
}

.bg_img {
  position: absolute;
  width: 100%;
  height: 10rpx;
  bottom: -10rpx;
  left: 0;
}

.input {
  margin-top: 58rpx;
  margin-bottom: 32rpx;
  display: flex;
  font-size: 48rpx;
}

.input > text {
  font-weight: 700;
  margin-left: 34rpx;
}

.palce {
  color: #ddd;
}

.input > input {
  text-align: center;
  flex: 1;
}

.dLine {
  height: 3rpx;
  width: 100%;
  background: #ddd;
}

.btnNext {
  height: 60rpx;
  line-height: 60rpx;
  width: 100%;
  font-size: 28rpx;
  background-color: #093;
  color: white;
  text-align: center;
  margin-top: 50rpx;
}

/* 充值金额 开始*/

.re_box {
  margin-top: 74rpx;
  padding: 0 55rpx;
}

.re_title {
  text-align: center;
  font-size: 28rpx;
  font-weight: 500;
  color: #909090;
  position: relative;
  margin-bottom: 26rpx;
}
.re_title::after {
  position: absolute;
  content: "";
  width: 200rpx;
  height: 2rpx;
  background: #707070;
  left: 0;
  top: 50%;
}

.re_title::before {
  position: absolute;
  content: "";
  width: 200rpx;
  height: 2rpx;
  background: #707070;
  right: 0;
  top: 50%;
}

.recharge_lists {
  display: flex;
  flex-wrap: wrap;
}

.recharge_list {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
  margin-right: 20rpx;
  width: 200rpx;
  height: 150rpx;
  border: 1px solid rgba(204, 204, 204, 1);
  border-radius: 6rpx;
  position: relative;
  overflow: hidden;
  box-sizing: border-box;
  background: #ffffff;
}

.recharge_list:nth-of-type(3n) {
  margin-right: 0rpx;
}

.re_price {
  font-size: 48rpx;
  font-weight: 600;
  color: #d94612;
}

.rmb {
  font-size: 28rpx;
  font-weight: 300;
  color: #d94612;
}

.balance {
  font-size: 22rpx;
  font-weight: 300;
  color: #d94612;
}

.integral {
  font-size: 14rpx;
  color: #fff;
  background: #d94612;
  padding: 4rpx 0 2rpx;
  width: 160rpx;
  text-align: center;
  transform-origin: 50% 50%;
  transform: rotateZ(45deg);
  position: absolute;
  top: 18rpx;
  right: -55rpx;
}

/* 充值金额 结束*/

/* 选择充值金额 开始 */

.selected {
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
}

.select_list {
  margin-left: 20rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
}

.select_price {
  color: #d94612;
  margin-left: 10rpx;
}

/* 选择充值金额 结束 */

/* 充值规矩 开始 */

.rules {
  background: #fdcb08;
  width: 600rpx;
  margin: 0 auto;
  border-radius: 10rpx;
}

.rules_title {
  color: #fff;
  font-size: 30rpx;
  font-weight: 600;
  text-align: center;
  padding: 20rpx 0;
}

.rules_info {
  padding: 20rpx 40rpx;
}

.rules_list {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
  color: #999;
  margin-bottom: 20rpx;
}

.rules_name {
  color: #000;
  font-weight: 400;
}

.condition {
  padding-left: 20rpx;
}

/* 充值规矩 结束  */
