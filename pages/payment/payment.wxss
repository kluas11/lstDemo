page {
  width: 100%;
  height: 100%;
  background: #ddd;
  padding-top: 30rpx;
  box-sizing: border-box;
}

.mat {
  height: 500rpx;
  margin-left: 30rpx;
  margin-right: 30rpx;
  background: #fafafa;
  border-radius: 10rpx;
}

.storeInfo {
  height: 130rpx;
  margin-left: 30rpx;
  line-height: 130rpx;
  font-size: 40rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.storeIcon {
  width: 80rpx;
  height: 80rpx;
  margin-right: 40rpx;
}

.payment {
  height: 550rpx;
  padding: 20rpx 40rpx 20rpx 40rpx;
  background: #fff;
  border-bottom-right-radius: 10rpx;
  border-bottom-left-radius: 10rpx;
}

.amountInput {
  font-size: 60rpx;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.amountInput input {
  margin-left: 20rpx;
  height: 80rpx;
  font-size: 48rpx;
}

.diviLine {
  width: 100%;
  height: 2rpx;
  background: #8a8a8a;
}

.myBalance {
  margin: 40rpx 0 10rpx 0;
  font-size: 30rpx;
  color: #38a4f0;
}

.payment button {
  color: #fff;
  margin-top: 20rpx;
}

.payByBalance {
  background: #38a4f0;
}

.payByWXPay {
  background: #1aad19;
}
