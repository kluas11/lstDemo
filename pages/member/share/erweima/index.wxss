page {
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}

.view-head {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #d94612;
}

.view-head text {
  color: #ffffff;
  font-size: 48rpx;
}

.view-row {
  display: flex;
  flex-direction: row;
  width: 725rpx;
  height: 80rpx;
  margin-left: 25rpx;
  align-items: center;
}

.view-row text {
  font-size: 30rpx;
  color: #666;
  margin-left: 0rpx;
  width: 230rpx;
}

.view-row input {
  font-size: 30rpx;
  color: #666;
}

.class-line {
  width: 100%;
  height: 2rpx;
  background: #dfdfdf;
}

.text-save {
  width: 500rpx;
  align-self: center;
  font-size: 32rpx;
  margin-top: 100rpx;
  color: #fff;
  text-align: center;
  height: 70rpx;
  border-radius: 9rpx;
  background: #3aa0b7;
  line-height: 70rpx;
}
