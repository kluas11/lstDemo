.userinfo {
  display: flex;
  padding: 20rpx;
  border-top: 1px solid #999;
  background: #d94612;
  align-items: center;
  justify-content: space-between;
}

.userinfo-avatar {
  overflow: hidden;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.uer_foot {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.apply{
  font-size: 30rpx;
  color: #ffffff;
}
.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}

.groupbtn {
  color: #3535da;
  font-size: 30rpx;
  text-decoration: underline;
}

.QRCodeBg {
  background: #fff;
  padding-top: 200rpx;
}

.QRCodeBg image {
  width: 400rpx;
  display: block;
  margin: auto;
}

.btn {
  height: 80rpx;
  width: 90%;
  margin-top: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #2ba246;
  font-size: 35rpx;
}
