/* pages/member/money/money.wxss */

.userinfo {
  display: flex;
  padding: 20rpx;
  border-top: 1px solid #999;
  background: #d94612;
  align-items: center;
  justify-content: space-between;
}

.userinfo-avatar {
  overflow: hidden;
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.uer_foot {
  margin-left: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.apply {
  font-size: 30rpx;
  color: #fff;
}

.userinfo-nickname {
  color: #fff;
  font-size: 28rpx;
}

.barcode {
  width: 100%;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 40rpx;
}

.barcode > canvas {
  width: 600rpx;
  height: 100rpx;
}

.barcode > text {
  margin-top: 16rpx;
}

.recharge {
  width: 100%;
  height: 110rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recharge-btn {
  height: 80rpx;
  line-height: 80rpx;
  width: 80%;
  background-color: #009247;
  color: white;
  text-align: center;
}

.view-moneyinfo {
  display: flex;
  flex-direction: column;
  height: 100%;
  justify-content: center;
  align-items: flex-end;
}

.text-money-prefix {
  font-size: 28rpx;
  color: #ffffff;
}
.money_box{
  display: flex;
  justify-content: space-between;
}
.text-money {
  margin-right: 10rpx;
  font-size: 28rpx;
  color: #3d3de8;
  border-bottom: 1rpx solid #3d3de8;
}
.money_btn{
  padding: 10rpx 15rpx;
  font-size: 26rpx;
  margin: 0;
  line-height: normal;
  background: #009247;
  border-radius: 8rpx;
  color: #ffffff;
  text-align: center;
  margin-bottom: 10rpx;
}
.info-item {
  widows: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-left {
  widows: 20rpx;
  height: 200rpx;
  margin-left: 30rpx;
}

.lline {
  width: 2rpx;
  background: #ccc;
  height: 200rpx;
}

.yuan {
  width: 19rpx;
  background: red;
  border-radius: 9.5rpx;
  height: 19rpx;
}

.yuan1 {
  width: 19rpx;
  background: darkgray;
  border-radius: 9.5rpx;
  height: 19rpx;
}

.info-right {
  margin-left: 10rpx;
  height: 200rpx;
  width: 670rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1px solid #eee;
}

.info-right text {
  line-height: 45rpx;
  font-size: 30rpx;
  color: #666;
}

.info-first {
  display: flex;
  flex-direction: row;
}

.account-item {
  display: flex;
  flex-direction: column;
}
