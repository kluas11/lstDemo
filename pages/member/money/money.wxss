/* pages/member/money/money.wxss */

.view-head {
  width: 100%;
  height: 220rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  background: #f5f5f5;
}

.barcode {
  width: 100%;
  height: 320rpx;
  flex-direction: column;
  display: flex;
  justify-content: center;
  align-items: center;
}

.barcode > canvas {
  width: 680rpx;
  height: 200rpx;
}

.barcode > text {
  margin-top: 16rpx;
}

.recharge {
  width: 100%;
  height: 160rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.recharge-btn {
  height: 80rpx;
  line-height: 80rpx;
  width: 50%;
  background-color: #009247;
  color: white;
  text-align: center;
}

.view-moneyinfo {
  display: flex;
  flex-direction: row;
  height: 60rpx;
  align-items: flex-end;
}

.text-money-prefix {
  font-size: 32rpx;
  color: orangered;
  margin-bottom: 10rpx;
}

.text-money {
  margin-left: 10rpx;
  font-size: 60rpx;
  line-height: 60rpx;
  color: orangered;
}

.info-item {
  widows: 100%;
  display: flex;
  flex-direction: row;
  align-items: center;
}

.info-left {
  widows: 20rpx;
  height: 200rpx;
  margin-left: 30rpx;
}

.lline {
  width: 2rpx;
  background: #ccc;
  height: 200rpx;
}

.yuan {
  width: 19rpx;
  background: red;
  border-radius: 9.5rpx;
  height: 19rpx;
}

.yuan1 {
  width: 19rpx;
  background: darkgray;
  border-radius: 9.5rpx;
  height: 19rpx;
}

.info-right {
  margin-left: 10rpx;
  height: 200rpx;
  width: 670rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  border-bottom: 1px solid #eee;
}

.info-right text {
  line-height: 45rpx;
  font-size: 30rpx;
  color: #666;
}

.info-first {
  display: flex;
  flex-direction: row;
}

.account-item {
  display: flex;
  flex-direction: column;
}
